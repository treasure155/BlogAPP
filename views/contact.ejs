<%- include('partials/header') -%>

<div class="container py-5">
    <h1 class="text-center mb-4">Contact Us</h1>

    <div class="row justify-content-center">
        <!-- Social Media Links Section -->
        <div class="col-lg-3 mb-4">
            <h3 class="mb-3">Connect with us on social media:</h3>
            <ul class="list-unstyled">
                <li class="mb-2">
                    <a href="https://www.facebook.com/werunerrandsforyou" target="_blank" class="text-decoration-none">
                        <i class="fab fa-facebook fa-lg"></i> Facebook
                    </a>
                </li>
                <li class="mb-2">
                    <a href="https://www.instagram.com/treasureidem" target="_blank" class="text-decoration-none">
                        <i class="fab fa-instagram fa-lg"></i> Instagram
                    </a>
                </li>
                <li class="mb-2">
                    <a href="https://www.twitter.com/GistempireO" target="_blank" class="text-decoration-none">
                        <i class="fab fa-twitter fa-lg"></i> Twitter
                    </a>
                </li>
            </ul>
        </div>

        <!-- Contact Form Section -->
        <div class="col-lg-9">
            <h3 class="mb-3">Send us a message:</h3>
            <form class="compose" action="/contact" method="POST">
                <div class="mb-3">
                    <label for="name" class="form-label">Name:</label>
                    <input type="text" class="form-control" id="name" name="name" required>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email:</label>
                    <input type="email" class="form-control" id="email" name="email" required>
                </div>
                <div class="mb-3">
                    <label for="message" class="form-label">Message:</label>
                    <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary w-100">Submit</button>
            </form>
        </div>
    </div>
</div>

<%- include('partials/footer') -%>
