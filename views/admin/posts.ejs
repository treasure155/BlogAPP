<!-- views/admin/posts.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <title>All Posts</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="d-flex">
    <%- include('../partials/adminSidebar'); %>
    <div class="container-fluid p-4">
      <h1>All Posts</h1>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Title</th>
            <th>Category</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% posts.forEach(post => { %>
            <tr>
              <td><%= post.title %></td>
              <td><%= post.category %></td>
              <td>
                <a href="/posts/<%= post.link %>" class="btn btn-primary">View</a>
                <a href="/admin/edit-post/<%= post._id %>" class="btn btn-warning">Edit</a>
                <a href="/admin/delete-post/<%= post._id %>" class="btn btn-danger">Delete</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
  <%- include('../partials/footer'); %>
</body>
</html>
